{
    "server": {
        "host": "localhost",
        "port": 8080,
        "apiEndpoint": "/api"
    },
    "db": {
        "exposed": {
            "user": {
                "id": true,
                "created_at": true,
                "updated_at": true,
                "type": true,
                "state": true,
                "email": true,
                "email_verified": true,
                "username": true,
                "transfer_limit_period": true,
                "transfer_limit_start": true,
                "transfer_limit_end": true,
                "transfer_limit_bytes": true
            }
        }
    },
    "security": {
        "saltRounds": 10,
        "apiKeySize": 64,
        "loginAttempts": 5,
        "loginAttemptsTimeRange": 3600
    },
    "logs": {
        "logUserAgent": true,
        "logLevels": [
            "FATAL",
            "ERROR",
            "WARNING",
            "INFO",
            "DEBUG"
        ]
    }
}
