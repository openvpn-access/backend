{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.lint.json",
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "simon/lib/node"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "new-cap": "off",
        "camelcase": "off"
    }
}
